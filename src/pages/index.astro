---
import Layout from '../layouts/Layout.astro';
import { BookingForm } from '../components/BookingForm';
import '../styles/global.css';
---

<Layout title="Eat with Chiso - Terminal Booking System">
  <main>
    <div class="container">
      <BookingForm client:load />
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    padding: 2rem 0;
    background-color: var(--color-background);
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }
</style>
